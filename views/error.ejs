<div class="container mt-5">
  <div class="text-center mb-4">
    <h1 class="display-4 text-danger"><%= message %></h1>
    <h2 class="text-warning"><%= error.status %></h2>
  </div>
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Error Stack Trace:</h5>
      <pre class="bg-light p-3 rounded"><%= error.stack %></pre>
    </div>
  </div>
</div>
